    <script>
        // Global Variables
        let services = [];
        let messages = [];
        let isLoggedIn = false;
        let currentTheme = localStorage.getItem('theme') || 'dark';

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeTheme();
            loadServices();
            loadMessages();
            createFloatingElements();
            initializeScrollAnimations();
            updateStats();
        });

        // Theme Management
        function initializeTheme() {
            document.documentElement.setAttribute('data-theme', currentTheme);
            updateThemeToggle();
        }

        function toggleTheme() {
            currentTheme = currentTheme === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', currentTheme);
            localStorage.setItem('theme', currentTheme);
            updateThemeToggle();
        }

        function updateThemeToggle() {
            const toggle = document.getElementById('themeToggle');
            const icon = toggle.querySelector('i');
            const text = toggle.querySelector('span');
            
            if (currentTheme === 'dark') {
                icon.className = 'fas fa-sun';
                text.textContent = 'Light Mode';
            } else {
                icon.className = 'fas fa-moon';
                text.textContent = 'Dark Mode';
            }
        }

        // Floating Elements
        function createFloatingElements() {
            const container = document.getElementById('floatingElements');
            const colors = ['#2563eb', '#4f46e5', '#ec4899', '#10b981'];
            
            for (let i = 0; i < 50; i++) {
                const element = document.createElement('div');
                element.className = 'floating-element';
                element.style.left = Math.random() * 100 + '%';
                element.style.animationDelay = Math.random() * 15 + 's';
                element.style.animationDuration = (Math.random() * 10 + 10) + 's';
                element.style.background = colors[Math.floor(Math.random() * colors.length)];
                container.appendChild(element);
            }
        }

        // Scroll Animations
        function initializeScrollAnimations() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.fade-in').forEach(el => {
                observer.observe(el);
            });
        }

        // Services Management
        function loadServices() {
            const savedServices = localStorage.getItem('services');
            if (savedServices) {
                services = JSON.parse(savedServices);
            } else {
                // Default services
                services = [
                    {
                        id: 1,
                        title: "Custom App Development",
                        icon: "fas fa-mobile-alt",
                        description: "Professional mobile and web application development tailored to your specific needs.",
                        url: ""
                    },
                    {
                        id: 2,
                        title: "Website Design & Development",
                        icon: "fas fa-code",
                        description: "Modern, responsive websites that drive engagement and deliver results.",
                        url: ""
                    },
                    {
                        id: 3,
                        title: "Digital Marketing Solutions",
                        icon: "fas fa-chart-line",
                        description: "Comprehensive digital marketing strategies to boost your online presence.",
                        url: ""
                    },
                    {
                        id: 4,
                        title: "E-commerce Solutions",
                        icon: "fas fa-shopping-cart",
                        description: "Complete e-commerce platforms with payment integration and inventory management.",
                        url: ""
                    },
                    {
                        id: 5,
                        title: "Cloud Services",
                        icon: "fas fa-cloud",
                        description: "Scalable cloud infrastructure and deployment solutions for your applications.",
                        url: ""
                    },
                    {
                        id: 6,
                        title: "Technical Support",
                        icon: "fas fa-headset",
                        description: "24/7 technical support and maintenance for all your digital solutions.",
                        url: ""
                    }
                ];
                saveServices();
            }
            renderServices();
            renderAdminServices();
        }

        function saveServices() {
            localStorage.setItem('services', JSON.stringify(services));
        }

        function renderServices() {
            const grid = document.getElementById('servicesGrid');
            grid.innerHTML = services.map(service => `
                <div class="service-card">
                    <div class="service-icon">
                        <i class="${service.icon}"></i>
                    </div>
                    <h3>${service.title}</h3>
                    <p>${service.description}</p>
                    ${service.url ? `<a href="${service.url}" class="service-url" target="_blank">Learn More</a>` : ''}
                </div>
            `).join('');
        }

        function renderAdminServices() {
            const list = document.getElementById('servicesList');
            list.innerHTML = services.map(service => `
                <div class="service-item">
                    <div class="service-info">
                        <h4>${service.title}</h4>
                        <p>${service.description}</p>
                        ${service.url ? `<small>URL: ${service.url}</small>` : ''}
                    </div>
                    <div class="service-actions">
                        <button class="edit-btn" onclick="editService(${service.id})">Edit</button>
                        <button class="delete-btn" onclick="deleteService(${service.id})">Delete</button>
                    </div>
                </div>
            `).join('');
        }

        function addService(formData) {
            const newService = {
                id: Date.now(),
                title: formData.get('title'),
                icon: formData.get('icon'),
                description: formData.get('description'),
                url: formData.get('url') || ''
            };
            
            services.push(newService);
            saveServices();
            renderServices();
            renderAdminServices();
            updateStats();
            showNotification('Service added successfully!');
        }

        function deleteService(id) {
            if (confirm('Are you sure you want to delete this service?')) {
                services = services.filter(service => service.id !== id);
                saveServices();
                renderServices();
                renderAdminServices();
                updateStats();
                showNotification('Service deleted successfully!');
            }
        }

        function editService(id) {
            const service = services.find(s => s.id === id);
            if (service) {
                const form = document.getElementById('serviceForm');
                form.title.value = service.title;
                form.icon.value = service.icon;
                form.description.value = service.description;
                form.url.value = service.url;
                
                // Change form to edit mode
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-save"></i> Update Service';
                submitBtn.onclick = (e) => {
                    e.preventDefault();
                    updateService(id, new FormData(form));
                };
            }
        }

        function updateService(id, formData) {
            const serviceIndex = services.findIndex(s => s.id === id);
            if (serviceIndex !== -1) {
                services[serviceIndex] = {
                    ...services[serviceIndex],
                    title: formData.get('title'),
                    icon: formData.get('icon'),
                    description: formData.get('description'),
                    url: formData.get('url') || ''
                };
                
                saveServices();
                renderServices();
                renderAdminServices();
                showNotification('Service updated successfully!');
                
                // Reset form
                const form = document.getElementById('serviceForm');
                form.reset();
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-plus"></i> Add Service';
                submitBtn.onclick = null;
            }
        }

        // Messages Management
        function loadMessages() {
            const savedMessages = localStorage.getItem('messages');
            if (savedMessages) {
                messages = JSON.parse(savedMessages);
            }
            renderMessages();
        }

        function saveMessages() {
            localStorage.setItem('messages', JSON.stringify(messages));
        }

        function renderMessages() {
            const list = document.getElementById('messagesList');
            if (messages.length === 0) {
                list.innerHTML = '<p style="text-align: center; color: var(--text-light);">No messages yet.</p>';
                return;
            }
            
            list.innerHTML = messages.map(message => `
                <div class="message-item">
                    <div class="message-header">
                        <div>
                            <div class="message-sender">${message.name}</div>
                            <div style="color: var(--text-light); font-size: 0.9rem;">${message.email}</div>
                        </div>
                        <div class="message-date">${new Date(message.date).toLocaleDateString()}</div>
                    </div>
                    <div style="font-weight: 600; margin-bottom: 0.5rem; color: var(--text);">${message.subject}</div>
                    <div class="message-content">${message.message}</div>
                </div>
            `).join('');
        }

        function addMessage(formData) {
            const newMessage = {
                id: Date.now(),
                name: formData.get('name'),
                email: formData.get('email'),
                subject: formData.get('subject'),
                message: formData.get('message'),
                date: new Date().toISOString()
            };
            
            messages.unshift(newMessage);
            saveMessages();
            renderMessages();
            updateStats();
        }

        // Admin Panel Management
        function showLogin() {
            document.getElementById('loginModal').classList.add('active');
        }

        function closeLogin() {
            document.getElementById('loginModal').classList.remove('active');
            document.getElementById('loginError').style.display = 'none';
        }

        function showAdmin() {
            if (isLoggedIn) {
                document.getElementById('adminPanel').classList.add('active');
                updateStats();
            } else {
                showLogin();
            }
        }

        function closeAdmin() {
            document.getElementById('adminPanel').classList.remove('active');
        }

        function showTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.admin-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.admin-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function updateStats() {
            document.getElementById('totalServices').textContent = services.length;
            document.getElementById('totalMessages').textContent = messages.length;
        }

        // Notifications
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Event Listeners
        document.getElementById('themeToggle').addEventListener('click', toggleTheme);
        document.getElementById('adminAccess').addEventListener('click', showAdmin);

        // Login Form
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const username = formData.get('username');
            const password = formData.get('password');
            
            // Simple authentication (in production, use proper authentication)
            if (username === 'admin' && password === 'admin123') {
                isLoggedIn = true;
                closeLogin();
                showAdmin();
                showNotification('Login successful!');
            } else {
                const errorDiv = document.getElementById('loginError');
                errorDiv.textContent = 'Invalid username or password';
                errorDiv.style.display = 'block';
            }
        });

        // Service Form
        document.getElementById('serviceForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            addService(formData);
            this.reset();
        });

        // Contact Form
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            addMessage(formData);
            this.reset();
            showNotification('Message sent successfully! We\'ll get back to you soon.');
        });

        // Settings Form
        document.getElementById('settingsForm').addEventListener('submit', function(e) {
            e.preventDefault();
            showNotification('Settings saved successfully!');
        });

        // Smooth Scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Close modals on outside click
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('login-modal')) {
                closeLogin();
            }
            if (e.target.classList.contains('admin-panel')) {
                closeAdmin();
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeLogin();
                closeAdmin();
            }
        });
    </script>
</body>
</html>

